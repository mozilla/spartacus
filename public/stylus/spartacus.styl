// Note: Certain includes (e.g. mixins + lib files are part of the
// grunt-contrib-stylus conf.


@import '_throbber';
@import '_buttons';
@import '_full-error';
@import '_forms';
@import '_pin';

$mp-fonts-path = '../lib/mp-fonts-stylus';
@import '../lib/mp-fonts-stylus/fonts';

@import '_typography';

body, html {
    color: $dark-gray;
    height: 100%;
    width: 100%;
}

#app {
    background: $bg-color;
    grain();
    height: 100%;
    margin: 0;
    padding: 0;
    min-width: 250px;
    max-width: 100%;
}

main {
    height: 100%;
}

.page {
    display-flex();
    flex-direction(column);
    margin: 0 auto;
    max-width: $S-max;
    min-height: 100%;
    padding: 0 20px 10px;
    position: relative;
    width: 100%;
}

@media $small-min-width {
    .page {
        display: block;
        padding-top: 30px;
        // outline: 1px solid red;
    }
}

.content {
    flex(1, 1, 100%);
    width: 100%;
}

.hidden {
    display: none;
}

.hidden.show {
    display: block;
}

.buttons {
    background: rgba(0,0,0,0.03);
    border-top: 1px solid #ccc;
    line-height: 0;
    margin: 10px -20px -10px;
    padding: 10px;

    .button {
        margin: 0;
        width: 48%;
        width: calc(50% - 5px);

        &:first-child {
            margin-right: 5px
        }

        &:only-child {
            margin: 0;
            width: 100%;
        }
    }
}

@media $small-min-width {
    .buttons {
        text-align: right;
        background: none;
        border-top: 0;
        margin: 20px -20px;
        padding: 20px;

        .button,
        .button:only-child {
            width: auto;
        }
    }
}

.sign-in,
.sign-in:before {
    background: url(../images/persona-btn-sprite.png) no-repeat right top;
}

.sign-in {
    color: $dark-gray;
    display: block;
    height: 42px;
    line-height: 42px;
    margin-top: 20px;
    max-width: 231px;
    padding-left: 50px;
    position: relative;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 1px $white;
    width: 100%;
    &:hover,
    &:active,
    &:focus {
        background-position: right bottom;
    }
}
